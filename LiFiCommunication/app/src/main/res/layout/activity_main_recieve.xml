<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layotBackground"
    tools:context=".MainActivityRecieve">

    <TextView
        android:id="@+id/infoLabelRecive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Входящие файлы"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/nameDeviceConnectRecieve"
        app:layout_constraintTop_toBottomOf="@+id/divider12" />

    <View

        android:id="@+id/divider12"
        android:layout_width="385dp"
        android:layout_height="1dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:background="@color/Divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameDeviceConnectRecieve" />

    <CheckBox
        android:id="@+id/nameDeviceConnectRecieve"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Имя устройства"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/infoAboutCommunicationRecieve"
        app:layout_constraintTop_toBottomOf="@+id/infoAboutCommunicationRecieve"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/infoAboutCommunicationRecieve"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="Нажмите на имя устройства, чтобы получить детальную информацию"
        app:layout_constraintStart_toStartOf="@+id/labelCommunication5"
        app:layout_constraintTop_toBottomOf="@+id/labelCommunication5" />

    <TextView
        android:id="@+id/labelCommunication5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Коммуникация с устройством"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/switchRecieve"
        app:layout_constraintTop_toBottomOf="@+id/divider11" />

    <View

        android:id="@+id/divider11"
        android:layout_width="385dp"
        android:layout_height="1dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:background="@color/Divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchRecieve" />

    <Switch
        android:id="@+id/switchRecieve"
        android:layout_width="322dp"
        android:layout_height="43dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:buttonTint="#00FFC107"
        android:text="Прием данных"
        android:textAlignment="textStart"
        android:checked="false"
        android:onClick="onSwitchClicked"
        android:textOff="Выкл"
        android:textOn="Вкл"
        android:textSize="18sp"
        android:thumbTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ScrollRecieve"
        android:layout_width="409dp"
        android:layout_height="422dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoLabelRecive">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>