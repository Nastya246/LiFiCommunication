<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layotBackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="339dp"
        android:layout_height="363dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="247dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lf" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/buttonBackground"

        android:orientation="horizontal"

        android:onClick="spravkaActivity"
        android:text="Справка"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/sendButtonMenu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/buttonBackground"
            android:onClick="sendActivity"
            android:src="@drawable/ic_file_upload_black_48dp" />

        <ImageButton
            android:id="@+id/buttonReciveMenu"
            android:layout_width="101dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/buttonBackground"
            android:onClick="receiveActivity"
            app:srcCompat="@drawable/ic_file_download_black_48dp" />


        <ImageButton
            android:id="@+id/parametryButtonMenu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/buttonBackground"
            android:onClick="settingActivity"
            app:srcCompat="@drawable/ic_build_black_48dp" />

        <ImageButton
            android:id="@+id/spravkaButtonMenu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/buttonBackground"
            android:onClick="spravkaActivity"
            app:srcCompat="@drawable/ic_info_outline_black_40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@color/buttonBackground"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

       <!--> android:onClick="sendActivity"
        android:text="Передача данных"
        android:textSize="16sp"
       <!-->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:background="@color/buttonBackground"
            android:onClick="sendActivity"
            android:text="Передача"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackground"
            android:onClick="receiveActivity"
            android:text="Прием"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackground"
            android:onClick="settingActivity"
            android:text="Настройки"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackground"
            android:onClick="spravkaActivity"
            android:text="Справка"
            android:textAlignment="center"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>